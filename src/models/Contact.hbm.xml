<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="models">
	<class name="Contact" table="Contact" discriminator-value="contact">
		<id name="id" type="int" column="id">
			<generator class="increment"/>
		</id>
		<discriminator column="type" type="string"/>
		<version name="version" column="VERSION"/>

		<property name="firstName" type="string">
			<column name="FIRSTNAME" />
		</property>
		
		<property name="lastName" type="string">
			<column name="LASTNAME" />
		</property>
		
		<property name="email" type="string">
			<column name="EMAIL" />
		</property>
		
		<many-to-one name="adresse" column="adresse" class="Adresse" not-null="true" cascade="all" lazy="false" />
		<set name="phoneNumbers" lazy="false" cascade="all-delete-orphan">
			<key column="id_contact" />
			<one-to-many class="PhoneNumber" />
		</set>
		
		<set name="groups" table="ContactGroup" lazy="false" cascade="persist">
			<key column="id"/>
			<many-to-many class="Group" column="idGroup"/>
		</set>
		
		<subclass name="Company" discriminator-value="company">
			<property name="numSiret" type="string" column="NUM_SIRET"/>
			<property name="name" type="string" column="NAME"/>
		</subclass>
	</class>
</hibernate-mapping>